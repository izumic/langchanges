    </div>
    
  
    <div class="form-group">
      <%= f.label :email, class:"control-label col-xs-2" %>
      <div class="col-xs-10">
          <%= f.text_field :email, class:"form-control" %>
      
      </div>
    </div>
    
        <div class="form-group">
